&pll {
	div-m = <8>;
	mul-n = <64>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(96)>;
	d1cpre = <1>;
	hpre = <4>;
	d1ppre = <1>;
	d2ppre1 = <1>;
	d2ppre2 = <1>;
	d3ppre = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
    pinctrl-names = "default";
    // cts - pa11, rts - pa12
	current-speed = <115200>;
	status = "okay";
    quectel_bg95: quectel_bg95 {
        compatible = "quectel,bg95";
	    label = "quectel-bg95";
		mdm-power-gpios = <&gpiog 7 GPIO_ACTIVE_HIGH>;
		mdm-reset-gpios = <&gpioe 0 0>;
    };
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
    pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&uart5 {
	pinctrl-0 = <&uart5_tx_pb13 &uart5_rx_pb12>;
    pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&rtc {
	status = "okay";
};

