/dts-v1/;
#include <st/h7/stm32h743Xi.dtsi>
#include <st/h7/stm32h743zitx-pinctrl.dtsi>
//#include "arduino_r3_connector.dtsi"

/ {
	model = "STMicroelectronics STM32H743ZI-ZB_TV board";
	compatible = "st,stm32h743zi-zb_tv";

	chosen {
		//zephyr,console = &usart3;
		zephyr,console = &cdc_acm_uart0;
		zephyr,shell-uart = &usart3;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,dtcm = &dtcm;
        zephyr,display = &ltdc;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&gpiof 12 GPIO_ACTIVE_HIGH>;
			label = "User LD1";
		};
        /*
		yellow_led: led_1 {
			gpios = <&gpioe 1 GPIO_ACTIVE_HIGH>;
			label = "User LD2";
		};
        */
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_0: button_0 {
			label = "User1";
			gpios = <&gpiog 1 GPIO_ACTIVE_HIGH>;
		};
		user_button_1: button_1 {
			label = "User2";
			gpios = <&gpioe 7 GPIO_ACTIVE_HIGH>;
		};
		user_button_2: button_2 {
			label = "User3";
			gpios = <&gpioe 8 GPIO_ACTIVE_HIGH>;
		};
		user_button_3: button_3 {
			label = "User4";
			gpios = <&gpioe 9 GPIO_ACTIVE_HIGH>;
		};
	};

	aliases {
		led0 = &green_led;
		//led1 = &yellow_led;
		sw0 = &user_button_0;
		sw1 = &user_button_1;
		sw2 = &user_button_2;
		sw3 = &user_button_3;
        gpioa = &gpioa;
        gpiod = &gpiod;
        gpiog = &gpiog;
        gpioe = &gpioe;
        gpiof = &gpiof;
	};
};

&clk_hsi{
    hsi-div = <1>;
	status = "okay";
};

zephyr_udc0: &usbotg_hs {
	pinctrl-0 = <&usb_otg_hs_dm_pb14 &usb_otg_hs_dp_pb15>;
    pinctrl-names = "default";
	status = "okay";
};

&zephyr_udc0 {
	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
		label = "CDC_ACM_0";
	};
};

