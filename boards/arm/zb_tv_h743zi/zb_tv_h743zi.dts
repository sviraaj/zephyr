&ltdc {
	pinctrl-0 = <&ltdc_r0_pg13 &ltdc_r1_pa2 &ltdc_r2_pa1 &ltdc_r3_pb0
		     &ltdc_r4_pa5 &ltdc_r5_pc0 &ltdc_r6_pb1 &ltdc_r7_pe15
		     &ltdc_g0_pe5 &ltdc_g1_pe6 &ltdc_g2_pa6 &ltdc_g3_pe11
		     &ltdc_g4_pb10 &ltdc_g5_pb11 &ltdc_g6_pc7 &ltdc_g7_pg8
		     &ltdc_b0_pg14 &ltdc_b1_pg12 &ltdc_b2_pd6 &ltdc_b3_pd10
		     &ltdc_b4_pe12 &ltdc_b5_pa3 &ltdc_b6_pb8 &ltdc_b7_pb9
		     &ltdc_de_pe13 &ltdc_clk_pe14 &ltdc_hsync_pc6 &ltdc_vsync_pa4>;
	pinctrl-names = "default";
	disp-on-gpios = <&gpiod 12 GPIO_ACTIVE_HIGH>;
	bl-ctrl-gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
	status = "okay";

	width = <480>;
	height = <80>;
	hsync-pol = <STM32_LTDC_HSPOL_ACTIVE_LOW>;
	vsync-pol = <STM32_LTDC_VSPOL_ACTIVE_LOW>;
	de-pol = <STM32_LTDC_DEPOL_ACTIVE_LOW>;
	pclk-pol = <STM32_LTDC_PCPOL_ACTIVE_LOW>;
	hsync-duration = <50>;
	vsync-duration = <3>;
	hbp-duration = <43>;
	vbp-duration = <12>;
	hfp-duration = <8>;
	vfp-duration = <8>;
	def-back-color-red = <0x00>;
	def-back-color-green = <0xFF>;
	def-back-color-blue = <0x00>;
};
