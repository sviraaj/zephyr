&spi3 {
    // SPI LCD Display
	status = "okay";
	pinctrl-0 = <&spi3_sck_pc10 &spi3_miso_pc11 &spi3_mosi_pc12>;
    ///delete-property/ clocks;
	//clocks = <&rcc STM32_CLOCK_BUS_APB2 0x00001000>,
