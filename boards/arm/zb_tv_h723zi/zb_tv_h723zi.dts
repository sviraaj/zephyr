        compatible = "ti,bq40zxx";
        reg = <0x0b>;
        label = "BQ40ZXX";
        design-voltage = <11100>;
        design-capacity = <16400>;
        taper-current = <130>;
        terminate-voltage = <9000>;
    };
};

&i2c3 {
	pinctrl-0 = <&i2c3_scl_pa8 &i2c3_sda_pc9>;
    pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&i2c4 {
	pinctrl-0 = <&i2c4_scl_pf14 &i2c4_sda_pf15>;
