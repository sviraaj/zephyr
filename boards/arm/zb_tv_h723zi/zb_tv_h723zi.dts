&clk_hsi{
    hsi-div = <1>;
	status = "okay";
};

&pll {
	div-m = <4>;
	mul-n = <10>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&pll3 {
	div-m = <4>;
	mul-n = <16>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(75)>;
	d1cpre = <1>;
	hpre = <1>;
	d1ppre = <1>;
	d2ppre1 = <2>;
	d2ppre2 = <2>;
	d3ppre = <2>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
    pinctrl-names = "default";
    // cts - pa11, rts - pa12
	current-speed = <115200>;
    hw-flow-control;
	status = "okay";
    quectel_bg95: quectel_bg95 {
        compatible = "quectel,bg95";
	    label = "quectel-bg95";
        // 3V8 power
		mdm-power-gpios = <&gpioc 4 GPIO_ACTIVE_HIGH>;
        // pwr/rst
		mdm-reset-gpios = <&gpioe 0 0>;
    };
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
    pinctrl-names = "default";
	//current-speed = <9600>;
	current-speed = <19200>;
	status = "okay";
	modbus0 {
		compatible = "zephyr,modbus-serial";
		label = "MODBUS0";
		status = "okay";
	};
};

&uart5 {
	pinctrl-0 = <&uart5_tx_pb13 &uart5_rx_pb12>;
    pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&rtc {
	status = "okay";
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
    pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;

    ti_tmp116_int: ti_tmp116@48 {
		compatible = "ti,tmp116";
		reg = <0x48>;
		label = "TMP116_INT";
		#address-cells = <1>;
		#size-cells = <0>;

		eeprom: ti_tmp116_eeprom@0 {
			compatible = "ti,tmp116-eeprom";
			reg = <0x0>;
			label = "TMP116_EEPROM";
			read-only;
        };
	};
};

&i2c2 {
	pinctrl-0 = <&i2c2_scl_pf1 &i2c2_sda_pf0>;
    pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
