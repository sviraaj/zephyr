&spi1 {
	status = "okay";
	pinctrl-0 = <&spi1_sck_pg11 &spi1_miso_pg9 &spi1_mosi_pd7>;
    /delete-property/ clocks;
	clocks = <&rcc STM32_CLOCK_BUS_APB2 0x00001000>,
		 <&rcc STM32_SRC_PLL1_Q SPI123_SEL(0)>;
    pinctrl-names = "default";
	cs-gpios = <&gpiog 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
};

&backup_sram {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* 128KB for bootloader */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(128)>;
			read-only;
		};

		/* application image slot: 384KB */
		slot0_partition: partition@20000 {
			label = "image-0";
			reg = <0x00020000 DT_SIZE_K(384)>;
		};

		/* backup slot: 384KB */
		slot1_partition: partition@100000 {
			label = "image-1";
			reg = <0x00080000 DT_SIZE_K(384)>;
		};

		/* swap slot: 128KB */
		scratch_partition: partition@160000 {
			label = "image-scratch";
			reg = <0x000E0000 DT_SIZE_K(128)>;
		};

		/* storage: 128KB for settings
		storage_partition: partition@20000 {
			label = "storage";
			reg = <0x00020000 0x00020000>;
		};
        */

        /* Storage partition will be used by nvs settings */
		//settings_partition: partition@f8000 {
		//	label = "settings_store";
		//	reg = <0x000e0000 0x00020000>;
		//};
	};
};

&iwdg1 {
	status = "okay";
