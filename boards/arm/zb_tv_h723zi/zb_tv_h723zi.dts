/ {
	model = "STMicroelectronics STM32H743ZI-ZB_TV board";
	compatible = "st,stm32h743zi-zb_tv";

	chosen {
		zephyr,console = &uart5;
		//zephyr,console = &cdc_acm_uart0;
		zephyr,shell-uart = &uart5;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,dtcm = &dtcm;
        zephyr,display = &ltdc;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&gpiof 12 GPIO_ACTIVE_HIGH>;
			label = "User LD1";
		};
        /* FIXME
		yellow_led: led_1 {
			gpios = <&gpioe 1 GPIO_ACTIVE_HIGH>;
			label = "User LD2";
		};
        */
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_0: button_0 {
			label = "User1";
			gpios = <&gpioe 9 GPIO_ACTIVE_HIGH>;
		};
		user_button_1: button_1 {
			label = "User2";
			gpios = <&gpioe 8 GPIO_ACTIVE_HIGH>;
		};
		user_button_2: button_2 {
			label = "User3";
			gpios = <&gpioe 7 GPIO_ACTIVE_HIGH>;
		};
		user_button_3: button_3 {
			label = "User4";
			gpios = <&gpiog 1 GPIO_ACTIVE_HIGH>;
		};
	};

    vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc1 15>;
		output-ohms = <10760>;
		full-ohms = <(10760 + 97600)>;
        //power-gpios = <&sx1509b 8 GPIO_ACTIVE_HIGH>;
	};

	aliases {
		led0 = &green_led;
		led1 = &green_led;
		led2 = &green_led;
		//led1 = &yellow_led;
		sw0 = &user_button_0;
		sw1 = &user_button_1;
		sw2 = &user_button_2;
		sw3 = &user_button_3;
        gpioa = &gpioa;
        gpioc = &gpioc;
        gpiod = &gpiod;
        gpiog = &gpiog;
        gpioe = &gpioe;
        gpiof = &gpiof;
        spi3 = &spi3;
		uart5 = &uart5;
		usart3 = &usart3;
	};

/*
	LG_COMP_CTRL - PF2
	LG_COMP_CTRL1 - PC4
	LG_COMP_CTRL2 - PC5
	USR_BUTTON1 - PG1
	USR_BUTTON2 - PE7
	USR_BUTTON3 - PE8
	USR_BUTTON4 - PE9
	NRF_LCD_CS - PA15
	NRF_LCD_RSTB - PD0
	NTC_ADC - PF5
	PWM1 - PC8
	GPIO1 - PD3
	GPIO2 - PD4
	GPIO3 - PD5
	RESET_MCU - PG6
	PWRKEY_MCU - PG5
	PWR_OUT_CTRL - PD11
	HEATER_CTRL - PD12
	SEL1 - PD13
	SEL2 - PD14
	DIAG_EN - PD15
	LED_CTRL - PF11
	FAN_CTRL - PB2
	BACKLIGHT_EN - PA0
	BUZZER - PA7
	LED1 - PE2
	LED2 - PE3
	LED3 - PE4
	LG_CMP - PF3
	IMU_INT1 - PF13
	IMU_INT2 - PG0
	BATTERY - PF4
	3V8_GOOD - PG7
*/
    zephyr,user {
		lg_cmp-gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
		imu_int1-gpios = <&gpiof 13 GPIO_ACTIVE_HIGH>;
		imu_int2-gpios = <&gpiog 0 GPIO_ACTIVE_HIGH>;
		battery-gpios = <&gpioa 0 GPIO_ACTIVE_HIGH>;
		3v8_good-gpios = <&gpiof 10 GPIO_ACTIVE_HIGH>;
		reset_mcu-gpios = <&gpioe 1 GPIO_ACTIVE_HIGH>;
		pwrkey_mcu-gpios = <&gpioe 0 GPIO_ACTIVE_HIGH>;
		pwr_out_ctrl-gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>;
		htr_ctrl-gpios = <&gpioa 5 GPIO_ACTIVE_HIGH>;
		sel1-gpios = <&gpioa 6 GPIO_ACTIVE_HIGH>;
		sel2-gpios = <&gpiob 0 GPIO_ACTIVE_HIGH>;
		diag_en-gpios = <&gpiob 1 GPIO_ACTIVE_HIGH>;
		led_ctrl-gpios = <&gpioa 2 GPIO_ACTIVE_HIGH>;
		fan_ctrl-gpios = <&gpioa 3 GPIO_ACTIVE_HIGH>;
		backlight_en-gpios = <&gpioa 15 GPIO_ACTIVE_HIGH>;
		buzzer-gpios = <&gpioe 10 GPIO_ACTIVE_HIGH>;
		lg_comp_ctrl-gpios = <&gpiof 2 GPIO_ACTIVE_HIGH>;
		lg_comp_ctrl1-gpios = <&gpiof 3 GPIO_ACTIVE_HIGH>;
		lg_comp_ctrl2-gpios = <&gpiof 4 GPIO_ACTIVE_HIGH>;
		nrf_lcd_cs-gpios = <&gpiog 5 GPIO_ACTIVE_HIGH>;
		nrf_lcd_rstb-gpios = <&gpiod 0 GPIO_ACTIVE_HIGH>;
		ntc_adc-gpios = <&gpiof 5 GPIO_ACTIVE_HIGH>;
		pwm1-gpios = <&gpioc 8 GPIO_ACTIVE_HIGH>;
		gpio1-gpios = <&gpiod 13 GPIO_ACTIVE_HIGH>;
		gpio2-gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>;
		gpio3-gpios = <&gpiod 15 GPIO_ACTIVE_HIGH>;
    };

