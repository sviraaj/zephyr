&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x000000000 0x000010000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x000010000 0x00006c000>;
		};
		slot1_partition: partition@7c000 {
			label = "image-1";
			reg = <0x0007c000 0x00006c000>;
		};
        scratch_partition: partition@e8000 {
			label = "image-scratch";
			reg = <0x000e8000 0x00010000>;
		};

		/*
		 * The flash starting at 0x000f8000 and ending at
		 * 0x000fffff is reserved for use by the application.
		 */

        /* Storage partition will be used by nvs settings */
		settings_partition: partition@f8000 {
			label = "settings_store";
			reg = <0x000f8000 0x00008000>;
		};
	};
};

&s25fl064 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Storage partition will be used by FCB if enabled. */
		ext_storage_partition: partition@0 {
			label = "ext_storage";
			reg = <0x00000000 0x00400000>;
		};

		/* Storage partition will be used by filesystem if enabled. */
		fs_partition: partition@400000 {
			label = "fs_storage";
			reg = <0x00400000 0x00400000>;
		};
	};
};

&usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
};
