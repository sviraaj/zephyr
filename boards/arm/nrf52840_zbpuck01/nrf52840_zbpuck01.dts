&qspi {
	status = "okay";
	sck-pin = <19>;
	io-pins = <22>, <23>, <32>, <21>;
	csn-pins = <18>;
	s25fl064: s25fl064lab@0 {
		compatible = "nordic,qspi-nor";
		reg = <0>;
		writeoc = "pp4io";
		readoc = "read4io";
		sck-frequency = <8000000>;
		label = "S25FL064";
		jedec-id = [01 60 17];
		size = <67108864>;
		has-be32k;
		has-dpd;
		t-enter-dpd = <10000>;
		t-exit-dpd = <35000>;
	};
};

