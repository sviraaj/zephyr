/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "Nordic ZedBlox Puck 01";
	compatible = "nordic,zbpuck-01";

    sky13351 {
		compatible = "skyworks,sky13351";
		vctl1-gpios = <&gpio1 3 GPIO_ACTIVE_LOW>;
		vctl2-gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
	};

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		sw0 = &button0;
	};

	leds {
		compatible = "gpio-leds";
		/* Lightwell RGB */
		led0: led_0 {
			gpios = <&gpio0 28 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
		led1: led_1 {
			gpios = <&gpio0 29 GPIO_ACTIVE_HIGH>;
			label = "Blue LED";
		};
		led2: led_2 {
			gpios = <&gpio0 30 GPIO_ACTIVE_HIGH>;
			label = "Red LED";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio1 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Push button switch 0";
		};
	};

	vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc 1>;
		output-ohms = <180000>;
		full-ohms = <(180000 + 1500000)>;
        power-gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	tx-pin = <6>;
	rx-pin = <8>;
};

&uart1 {
    compatible = "nordic,nrf-uarte";
    //status = "okay";
	//current-speed = <9600>;
	//tx-pin = <31>;
	//rx-pin = <30>;
};

&i2c0 {
    compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	sda-pin = <25>;
	scl-pin = <27>;

    hdc2080: hdc2080@40 {
        compatible = "ti,hdc2080";
        reg = <0x40>;
        label = "HDC2080";
    };
 
    lps22hh: lps22hh@5c {
		compatible = "st,lps22hh";
		reg = <0x5c>;
		label = "LPS22HH";
	};

    ti_tmp116: ti_tmp116@49 {
		compatible = "ti,tmp116";
		reg = <0x49>;
		label = "TMP116";
	};
};

&i2c1 {
    compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	sda-pin = <14>;
	scl-pin = <16>;
};

&pwm0 {
	status = "okay";
};

&spi2 {
    compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <11>;
	mosi-pin = <12>;
	miso-pin = <26>;
    miso-pull-up;
	cs-gpios = <&gpio0 24 0>;
};

