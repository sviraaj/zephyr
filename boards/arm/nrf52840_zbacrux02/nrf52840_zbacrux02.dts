/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "Nordic ZedBlox Acrux 02";
	compatible = "nordic,acrux-02", "nordic,nrf52840-qiaa",
		     "nordic,nrf52840";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		sw0 = &button0;
		sw1 = &button1;
		sw2 = &button2;
		sw3 = &button3;
	};

	leds {
		compatible = "gpio-leds";
		/* Lightwell RGB */
		led0: led_0 {
			gpios = <&sx1509b 0 GPIO_ACTIVE_LOW>;
			label = "Green LED";
		};
		led1: led_1 {
			gpios = <&sx1509b 1 GPIO_ACTIVE_LOW>;
			label = "Blue LED";
		};
		led2: led_2 {
			gpios = <&sx1509b 2 GPIO_ACTIVE_LOW>;
			label = "Red LED";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&sx1509b 3 GPIO_ACTIVE_LOW>;
			label = "Push button switch 0";
		};
		button1: button_1 {
			gpios = <&sx1509b 4 GPIO_ACTIVE_LOW>;
			label = "Push button switch 1";
		};
		button2: button_2 {
			gpios = <&sx1509b 5 GPIO_ACTIVE_LOW>;
			label = "Push button switch 2";
		};
		button3: button_3 {
			gpios = <&sx1509b 6 GPIO_ACTIVE_LOW>;
			label = "Push button switch 3";
		};
	};

	vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc 1>;
		output-ohms = <47000>;
		full-ohms = <(47000 + 806000)>;
        power-gpios = <&sx1509b 8 GPIO_ACTIVE_HIGH>;
	};

    mx25rxx: mx25rxx_0 {
        status = "okay";
        compatible = "qspi,mx25rxx";
        label = "MX25RXX";
    };
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	tx-pin = <6>;
	rx-pin = <8>;

    a9grda {
        compatible = "rda,a9g";
	    label = "a9grda";
		mdm-power-gpios = <&gpio1 8 0>;
		mdm-reset-gpios = <&sx1509b 9 0>;
    };
};

&uart1 {
    compatible = "nordic,nrf-uarte";
    status = "okay";
	current-speed = <9600>;
	tx-pin = <31>;
	rx-pin = <30>;
};

&i2c0 {
    compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	sda-pin = <26>;
	scl-pin = <27>;

    icm20600: icm20600@68 {
        compatible = "invensense,icm20xxx";
        reg = <0x68>;
        label = "ICM20600";
    };

    bme280_int: bme280@76 {
        compatible = "bosch,bme280";
        reg = <0x76>;
        label = "BME280_int";
    };

    bme280_ext: bme280@77 {
        compatible = "bosch,bme280";
        reg = <0x77>;
        label = "BME280_ext";
    };
};

&i2c1 {
    compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	sda-pin = <11>;
	scl-pin = <12>;

	sx1509b: sx1509b@3e {
		compatible = "semtech,sx1509b";
		reg = <0x3e>;
		label = "GPIO_P0";
		gpio-controller;
		int1-gpios = <&gpio1 2 0>;
		#gpio-cells = <2>;
		ngpios = <16>;
	};
};

&pwm0 {
	status = "okay";
	ch0-pin = <24>;
	ch1-pin = <36>;
	//ch0-inverted;
};

&pwm1 {
	status = "okay";
	ch0-pin = <7>;
	ch0-inverted;
};

&spi2 {
    compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <20>;
	mosi-pin = <25>;
	miso-pin = <16>;
    miso-pull-up;
	cs-gpios = <&gpio0 13 0>;
};

&spi3 {
    compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <17>;
	mosi-pin = <15>;
	miso-pin = <14>;
	cs-gpios = <&gpio1 12 0>;
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x000000000 0x000010000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x000010000 0x000074000>;
		};
		slot1_partition: partition@84000 {
			label = "image-1";
			reg = <0x00084000 0x000074000>;
		};
		/*
        scratch_partition: partition@de000 {
			label = "image-scratch";
			reg = <0x000de000 0x0001a000>;
		};
        */

		/*
		 * The flash starting at 0x000f8000 and ending at
		 * 0x000fffff is reserved for use by the application.
		 */

        /* Storage partition will be used by nvs settings */
		settings_partition: partition@f8000 {
			label = "settings_store";
			reg = <0x000f8000 0x00008000>;
		};

		/* Storage partition will be used by FCB/NFFS/NVS if enabled. */
		/*storage_partition: partition@f8000 {
			label = "storage";
			reg = <0x000f8000 0x00008000>;
		};*/
	};
};

&mx25rxx {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Storage partition will be used by FCB if enabled. */
		ext_storage_partition: partition@0 {
			label = "ext_storage";
			reg = <0x00000000 0x00400000>;
		};

		/* Storage partition will be used by filesystem if enabled. */
		fs_partition: partition@400000 {
			label = "fs_storage";
			reg = <0x00400000 0x00400000>;
		};
	};
};

&usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
};
